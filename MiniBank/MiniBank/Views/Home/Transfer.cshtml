
@{
    ViewBag.Title = "ManagePayees";
}

<style>
    @@media screen and (max-width: 1200px) {
        .PayeeButton {
            width: 80% !important;
        }
    }

    body {
        min-height: 100%;
        min-height: 100vh;
    }

    .PayeeButton {
        height: 300px;
        width: 300px;
        margin: 20px auto;
        box-shadow: 2px 2px 3px #aaa;
        background-color: #74f2b7;
        text-align: center;
        padding: 20px;
    }

    #PayeesControls {
        min-height: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

        #PayeesControls a {
            display: block;
            width: 100%;
            height: 100%;
            color: #FFF;
            text-decoration: none;
        }

            #PayeesControls a:hover {
                color: darkslateblue;
                text-decoration: none;
                font-weight: bold;
            }

                #PayeesControls a:hover #AddPayee {
                    background: url(/Content/images/add_payee_hover.png);
                    background-position: center;
                    background-size: contain;
                    background-repeat: no-repeat;
                }

    #AddPayee {
        height: 80%;
        background: url(/Content/images/add_payee.png);
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
    }

    #PayeesControls a:hover #TransferMoney {
        background: url(/Content/images/money_transfer_hover.png);
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
    }

    #TransferMoney {
        height: 80%;
        background: url(/Content/images/money_transfer.png);
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
    }
</style>

<div id="PayeesControls" class="row">
    <div class="col-xs-offset-0 col-sm-offset-0 col-md-1 col-lg-2"></div>
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
        <div class="PayeeButton">
            <a href="../Payees">
                <div id="AddPayee"></div>
                Add Payee
            </a>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
        <div class="PayeeButton">
            <a href="../Account/MoneyTransfer">
                <div id="TransferMoney"></div>
                Transfer Money
            </a>
        </div>
    </div>
    <div class="col-xs-offset-0 col-sm-offset-0 col-md-1 col-lg-2"></div>
</div>